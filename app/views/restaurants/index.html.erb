<div class="container">
  <h1>Restaurants</h1><br>
  <% @restaurants.each do |restaurant| %>
  <h3><%= restaurant.name %></h3>
  <h4><%= restaurant.address %></h4>
  <p>Tel: <%= restaurant.phone_number %></p>
  <p>Category: <%= restaurant.category.capitalize %></p>
  <p><i><%= link_to "More..", restaurant_path(restaurant) %></i></p>
  <br>
  <% end %>
</div>
